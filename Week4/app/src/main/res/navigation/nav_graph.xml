<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movie_list">

    <fragment
        android:id="@+id/movie_list"
        android:name="com.kulloveth.moviesapp.movies.MoviesFragment"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies" >
        <action
            android:id="@+id/action_movie_list_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment"
            app:popUpTo="@id/movieDetailFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/favorite_list"
        android:name="com.kulloveth.moviesapp.favorites.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_favorite_list_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.kulloveth.moviesapp.movies.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail" >
        <action
            android:id="@+id/action_movieDetailFragment_to_movie_list"
            app:destination="@id/movie_list"
            app:popUpTo="@id/movie_list"
            app:popUpToInclusive="true" />
        <argument
            android:name="movie_title"
            app:argType="string" />
        <argument
            android:name="movie_genre"
            app:argType="string" />
        <argument
            android:name="movie_id"
            app:argType="integer" />
        <argument
            android:name="movie_overview"
            app:argType="string" />
        <argument
            android:name="movie_date"
            app:argType="string" />
        <argument
            android:name="movie_poster"
            app:argType="integer" />
    </fragment>
</navigation>